extends layout

block content
  h1= title

  form(method="post", enctype="multipart/form-data", action="/", onsubmit="spinner()", style="margin: 10px")
    input(type="file" name="recfile")
    input(type="submit" value="Submit" class="waves-effect waves-light btn")
    div(class="spinner", id="loader", style="display: none")
      - for(var i = 0; i < 5; i++)
        div(class="rect#{i}", style="margin-right:1px")

  img(src="/images/#{img}", width="400", height="400")
  div(style="display: inline-block")
    canvas(id="myChart" width="400" height="400")

  script.
    console.log('#{results}');

    var ctx = document.getElementById("myChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });

    function spinner() {
        document.getElementById("loader").style.display = "inline-block";
    }
